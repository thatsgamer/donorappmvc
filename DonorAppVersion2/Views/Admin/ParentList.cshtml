@model IEnumerable<DonorAppVersion2.Models.Parent>

@{
    ViewBag.Title = "All Parents List";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>List of All Registered Parents</h2>
<table class="table table-striped">
    @if (Model.Count() > 0)
    {
        <tr>
            <th>Name</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Address</th>
            <th>DOB</th>
            <th>Payment Status</th>
            <th>Status</th>
        </tr>

        foreach (var item in Model)
        {
            <tr>
                <td>@item.Salutation @item.FirstName, @item.LastName</td>
                <td>
                    @item.ContactNumber
                    @if (item.isContactVerified)
                    {
                        <input type="checkbox" checked readonly /> <text>Verified</text>
                    }
                    else
                    {
                        <input type="checkbox" readonly /> <text>Not Verified</text>
                    }

                </td>



                <td>
                    @item.Email
                    @if (item.isEmailVerified)
                    {
                        <input type="checkbox" checked readonly /> <text>Verified</text>
                    }
                    else
                    {
                        <input type="checkbox" readonly /> <text>Not Verified</text>
                    }

                </td>
                <td>@item.Address, @item.State, @item.Zip</td>
                <td>@item.DateOfBirth</td>
                <td>
                    @if (item.isPaid)
                    {
                        <text>Paid</text>
                    }
                    else
                    {
                        <text>Unpaid</text>
                    }

                </td>

                <td>@item.Status</td>
            </tr>
        }
    }
    else
    {
        <tr><td>There are no Parents Registered Yet!</td></tr>
    }

</table>