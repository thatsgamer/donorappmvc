<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Patent Portal</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>



</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Parent Portal : Donor 21", "Dashboard", "Parent", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="~/Parent/Dashboard">Dashboard</a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Tools <span class="caret"></span></a>
                        <ul class="dropdown-menu">

                            <li>
                                <a href="~/Parent/MyChilds">My Donor Cycle Involvment</a>
                            </li>
                            <li>
                                <a href="~/Parent/AddDonorCycle">Submit New Child / Donor Cycle</a>
                            </li>
                            <li role="separator" class="divider"></li>
                            <li>
                                <a href="~/Parent/ViewAgencies">My Associated Agencies / Clinics</a>
                                <a href="~/Parent/AddClinic">Add New Agency / Clinic</a>
                            </li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">View Donor Updates</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Match Details <span class="caret"></span></a>
                        <ul class="dropdown-menu">

                            <li>
                                <a href="~/Parent/RequestMatch">My Match Requests</a>
                            </li>
                            <li><a href="~/Parent/NewRequest">Submit New Match Request</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">My Payments<span class="caret"></span></a>
                        <ul class="dropdown-menu">

                            <li>
                                <a href="~/Parent/MyPendingPayments">Pending Payments</a>
                            </li>
                            <li><a href="~/Parent/PaymentHistory">Payment History</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Settings <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/Parent/ParentProfile">Edit Profile</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Reports</a></li>
                        </ul>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
    <li>
        <a href="#" style="font-size:xx-small; color:yellow"> Welcome @Session["ParentName"].ToString() [PID : @Session["ParentId"].ToString()]</a>

                </li>
                <li>
                    <a href="~/Parent/SessionTimeout">Logout</a>
                </li>
            </ul>
            </div>
        </div>
    </div>

    <div class="container body-content"><br />
        @RenderBody()
        <hr />
        <footer>
            <p style="text-align:center">&copy; @DateTime.Now.Year - Donor21 - Parent Portal</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>