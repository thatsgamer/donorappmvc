@model DonorAppVersion2.Models.MatchRequestedByParent

@{
    ViewBag.Title = "NewRequest";
    Layout = "~/Views/Shared/_parentLayout.cshtml";
}

<h2>Request a New Match</h2>

@using (Html.BeginForm("NewRequest", "Parent"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>We will find you a Donor based on your profile, Request Here</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ParentMatchRequestId)

        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.Note, "Describe your Request", htmlAttributes: new { @class = "control-label" })<br /><br />
                @Html.TextAreaFor(model => model.Note, htmlAttributes: new { @class = "form-control", @rows = "4" })
                @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <label class="label label-success">@ViewBag.SuccessMessage</label>
                <label class="label label-warning">@ViewBag.WarningMessage</label>
                <label class="label label-danger">@ViewBag.ErrorMessage</label>
            </div>
        </div>
        <div class="form-group">
            <div class=" col-md-12">
                <input type="submit" value="Submit New Match Request" class="btn btn-primary btn-block" /><br />
                <a href="~/Parent/RequestMatch/" class="btn btn-info">View all requests made by you</a>
            </div>
        </div>

    </div>

}