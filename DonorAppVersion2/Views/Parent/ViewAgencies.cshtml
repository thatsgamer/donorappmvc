@model IEnumerable<DonorAppVersion2.Models.ParentAgenciesViewModel>
@{
    ViewBag.Title = "View my associated Agencies";
    Layout = "~/Views/Shared/_parentLayout.cshtml";
}

<h2>My Associated Agencies</h2>
<hr />

<a href="~/Parent/AddClinic" class="btn btn-primary">Add New Agency</a> <br /><br />

<table class="table table-striped">
    

    @if (Model.Count() > 0)
    {

        <tr>
            <th>ID With Agency</th>
            <th>Agency Type</th>
            <th>Agency Name</th>
            <th>Contact Person</th>
            <th>Approval Status</th>
            <th>Action</th>
        </tr>

        foreach (var item in Model)
        {
            <tr>
                <td>@item.ParentIdOnPartnersSystem</td>
                <td>
                    @item.PartnerType
                </td>
                <td>@item.PartnerName</td>
                <td>@item.ContactsName (@item.ContactsDesignation) </td>
                <td>@item.Status</td>

                <td><a href="~/Parent/RemoveAgency/@item.ParentPartnerId" class="label label-danger">Remove</a></td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td>No Agencies yet added by you!</td>
        </tr>
    }

</table>





